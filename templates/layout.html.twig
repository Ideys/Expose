<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js"> <!--<![endif]-->
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>{% block title settings.name %}</title>
        <meta name="description" content="{% block description settings.description %}">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="author" content="{{ settings.authorName }}">
        <meta name="generator" content="Ideys Expose">
        {% if settings.verificationKey|length %}
        <meta name="google-site-verification" content="{{ settings.verificationKey }}">
        {% endif %}
        <link rel="stylesheet" href="{{ app.request.basepath }}/assets/vendor/foundation/css/normalize.css?v={{ semver }}">
        <link rel="stylesheet" href="{{ app.request.basepath }}/assets/vendor/foundation/css/foundation.min.css?v={{ semver }}">
        <link rel="stylesheet" href="{{ app.request.basepath }}/assets/vendor/foundation-icon-fonts/foundation-icons.css?v={{ semver }}">
        <link rel="stylesheet" href="{{ app.request.basepath }}/assets/css/main.css?v={{ semver }}">
        {% block head %}{% endblock %}
        {% if settings.mapsKey %}
        <script type="text/javascript"
                src="https://maps.googleapis.com/maps/api/js?key={{ settings.mapsKey }}&sensor=false"></script>
        {% endif %}
        <script src="{{ app.request.basepath }}/assets/vendor/foundation/js/vendor/modernizr.js?v={{ semver }}"></script>
    </head>
    <body class="{% block body_class '' %}">
        <!--[if lt IE 7]>
            <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
        <![endif]-->

        <div id="flash" class="row">
          <div class="twelve columns">
            {% for type, flashMessages in app.session.flashbag.all() %}
              {% for flashMessage in flashMessages %}
                <div class="alert-box {{ type }}">
                    {{ flashMessage|raw }}
                    <a href="" class="close">&times;</a>
                </div>
              {% endfor %}
            {% endfor %}
          </div>
        </div>

        {% block content %}{% endblock %}

        <div id="footer">{% block footer %}{% endblock %}</div>

        <button id="to-top"
                class="hidden tiny secondary button">
          <i class="fi-arrow-up"></i>
          {{ 'top'|trans }}
        </button>

        <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.0/jquery.min.js"></script>
        <script>window.jQuery || document.write('<script src="{{ app.request.basepath }}/assets/vendor/jquery/dist/jquery.min.js"><\/script>')</script>
        <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.4/jquery-ui.min.js"></script>
        <script src="{{ app.request.basepath }}/assets/vendor/foundation/js/foundation.min.js?v={{ semver }}"></script>
        <script src="{{ app.request.basepath }}/assets/js/main.js?v={{ semver }}"></script>
        <script>
          var basePath = "{{ app.request.basepath }}";
        </script>
        {% block javascripts %}{% endblock %}
        {% block foundation_js %}
        <script>
          $(document).foundation();
        </script>
        {% endblock foundation_js %}

        {% if settings.analyticsKey|length %}
        <!-- Universal Analytics -->
        <script>
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
            (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
            m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

            ga('create', '{{ settings.analyticsKey }}', 'auto');
            ga('send', 'pageview');
        </script>
        {% endif %}
    </body>
</html>
