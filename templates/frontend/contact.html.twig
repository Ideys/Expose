{% extends "frontend/layout.html.twig" %}

{% block body_class parent() ~ ' contact-section' %}

{% block main -%}
<div class="row">
{% if 'enabled' == site.contactSection %}
  <div class="medium-5 medium-push-7 columns">
    {{ widgets.inclusion_replace_keys(site.contactContent) }}
  </div>
  <div class="medium-7 medium-pull-5 columns">
    {{ form_start(form) }}
        {{ form_errors(form) }}
        <fieldset>
          <div class="row">
            <div class="medium-6 columns">
              {{ form_row(form.name) }}
            </div>
            <div class="medium-6 columns">
              {{ form_row(form.email) }}
            </div>
          </div>
          <div class="row">
            <div class="medium-12 columns">
              {{ form_row(form.subject) }}
            </div>
          </div>
        </fieldset>
        <fieldset>
          {{ form_row(form.message, {'attr': {'rows': '12'} }) }}
        </fieldset>
        <div class="hidden">
          {{ form_rest(form) }}
        </div>
        <div class="text-right">
          <input type="submit" name="submit"
                 value="{{ 'contact.send'|trans }}" class="tiny secondary button">
        </div>
    {{ form_end(form) }}
  </div>
{% else %}
  <div class="large-12 columns">
    {{ widgets.inclusion_replace_keys(site.contactContent) }}
  </div>
{% endif %}
</div>
{% if 'contact.section' == site.adminLink %}
<a href="{{ path('admin_content_manager') }}"
   id="admin-link"
   class="tiny secondary button">
  {{ 'admin.admin'|trans }}
</a>
{% endif %}
{%- endblock main %}
