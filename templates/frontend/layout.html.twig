{% extends "layout.html.twig" %}

{% import "widgets.html.twig" as widgets %}

{% block head %}
{% if site.googleFonts|length %}
<link href="//fonts.googleapis.com/css?family={{ site.googleFonts }}" rel="stylesheet" type="text/css">
{% endif %}
<style>
{{ site.customStyle|raw }}
</style>
{% endblock head %}

{% block javascripts %}
<script>
{{ site.customJavascript|raw }}
</script>
{% endblock javascripts %}

{% set hideMenuOnHomepage = site.hideMenuOnHomepage ? ' hide-menu-on-homepage' : ''%}
{% block body_class parent()~' background-'~site.layoutBackground~hideMenuOnHomepage %}

{% block content -%}
{% if 'top' == site.menuPosition %}
  {% include "frontend/menu/_topbar.html.twig" only %}
{% elseif 'left' == site.menuPosition %}
  <div class="off-canvas-wrap">
    <div class="inner-wrap">
    {% include "frontend/menu/_sidebar.html.twig" only %}
{% endif %}
    <section id="content"
             {% if 'left' == site.menuPosition %}
             class="main-section large-10 medium-9 columns"
             {% endif %}>
      {% block main %}{% endblock %}
    </section>
{% if 'left' == site.menuPosition %}
    <a class="exit-off-canvas"></a>
    </div>
  </div>
{% endif %}
{%- endblock content%}
