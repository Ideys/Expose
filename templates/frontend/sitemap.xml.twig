{% spaceless %}

    <?xml version="1.0" encoding="UTF-8"?>

    <urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">

        {% for url in urls %}
            <url>
                <loc>{{ url.path }}</loc>
                <lastmod>{{ url.lastModification }}</lastmod>
                <changefreq>{{ url.changeFrequency }}</changefreq>
                <priority>{{ url.priority|round(1) }}</priority>
            </url>
        {% endfor %}

    </urlset>

{% endspaceless %}
