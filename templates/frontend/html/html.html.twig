{% extends "frontend/layout.html.twig" %}

{% block body_class parent()~widgets.section_body_classes(section) %}

{% block main -%}
{% if section.hasItems('Page') %}
<div class="row">
  <div class="large-12 columns">
    {% set content = (section.items('Page')|first).content %}
    {% if not content|length %}
      <p class="coming-soon">
        {{ 'section.coming.soon'|trans }}
      </p>
    {% else %}
      {% include template_from_string(widgets.inclusion_replace_keys(content)) %}
    {% endif %}
  {# Pagination #}
  {% if section.items('Page')|length > 1 %}
  <ul class="pagination">
    {% for item in section.items('Page') %}
    <li>
      <a href="#"
         title="{{ item.title }}">
        {{ loop.index }}
      </a>
    </li>
    {% endfor %}
  </ul>
  {% endif %}
  </div>
</div>
{% else %}
<p class="coming-soon">
  {{ 'section.coming.soon'|trans }}
</p>
{% endif %}
{%- endblock main %}
