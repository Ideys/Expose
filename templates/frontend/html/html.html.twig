{% extends "frontend/layout.html.twig" %}

{% block body_class parent()~' content-page' %}

{% block main -%}
{% if section.hasItems %}
<div class="row">
  <div class="large-12 columns">
    {% set content = (section.items|first).content|replace({
      '__path:gallery__': app.request.basepath~'/gallery',
    }) %}
    {% if not content|length %}
      <p class="coming-soon">
        {{ 'section.coming.soon'|trans }}
      </p>
    {% else %}
      {% include template_from_string(content) %}
    {% endif %}
  {# Pagination #}
  {% if section.items|length > 1 %}
  <ul class="pagination">
    {% for item in section.items %}
    <li>
      <a href="#"
         title="{{ item.title }}">
        {{ loop.index }}
      </a>
    </li>
    {% endfor %}
  </ul>
  {% endif %}
  </div>
</div>
{% else %}
<p class="coming-soon">
  {{ 'section.coming.soon'|trans }}
</p>
{% endif %}
{%- endblock main %}
