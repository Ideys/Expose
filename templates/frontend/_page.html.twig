{% spaceless %}
<div class="row">
  <div class="large-12 columns">
  {% if items|length > 1 %}
    {% for item in items %}
    {{ item.title }}
    {% endfor %}
  {% else %}
    {{ items[0].content|replace({
      '__path:gallery__': app.request.basepath~'/gallery',
    })|raw }}
  {% endif %}
  </div>
</div>
{% endspaceless %}