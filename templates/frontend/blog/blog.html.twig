{% extends "frontend/layout.html.twig" %}

{% block body_class parent()~widgets.section_body_classes(section) %}

{% block title widgets.section_title(section, parent()) %}

{% block main -%}
{% if section.hasItems('Post') %}
<div class="row">
  {% for post in section.items('Post') %}
  <div class="small-12 columns post">
    <h2>{{ post.title }}</h2>
    <div class="post-header">
      {% if post.posting_date|length %}
        {{ post.posting_date|date('d/m/Y') }}
      {% endif %}
      {% if post.author|length %}
        {{ 'blog.post.by.author'|trans({'%author%': post.author}) }}
      {% endif %}
    </div>
    <div class="post-body">
      {{ post.content|raw }}
    </div>
  </div>
  {% endfor %}
</div>
{% else %}
<p class="coming-soon">
  {{ 'section.coming.soon'|trans }}
</p>
{% endif %}
{%- endblock main %}
