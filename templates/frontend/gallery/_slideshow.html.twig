{% spaceless %}
<div class="row">
  <div class="large-12 columns">
    <ul class="gallery-slideshow" data-orbit>
      {% for item in section.items %}
      <li class="text-center">
        <img src="{{ app.request.basepath }}/gallery/1200/{{ item.path }}" alt="{{ item.title|e }}">
        {% if item.title|length or item.description|length %}
        <div class="orbit-caption">
          {{ item.title|nl2br }}
          {{ item.description|raw|nl2br }}
        </div>
        {% endif %}
      </li>
      {% endfor %}
    </ul>
  </div>
</div>
{% endspaceless %}