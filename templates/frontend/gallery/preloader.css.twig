<style>
.sandglass {
    text-align: center;
    width: 120px;
    height: 60px;
    position: fixed;
    margin: -30px 0 0 -60px;
    top: 50%;
    left: 50%;
}

.sandglass span {
    display: inline-block;
    vertical-align: middle;
    width: 20px;
    height: 20px;
    margin: 50px auto;
    background: #000000;
    -moz-border-radius: 100px;
    -moz-animation: sandglass 0.9s infinite alternate;
    -webkit-border-radius: 100px;
    -webkit-animation: sandglass 0.9s infinite alternate;
    -ms-border-radius: 100px;
    -ms-animation: sandglass 0.9s infinite alternate;
    -o-border-radius: 100px;
    -o-animation: sandglass 0.9s infinite alternate;
    border-radius: 100px;
    animation: sandglass 0.9s infinite alternate;
}

{% for row, seconds in {1: '0s', 2: '0.27s', 3: '0.54s'} %}
#sandglass_{{ row }} {
    -moz-animation-delay: {{ seconds }};
    -webkit-animation-delay: {{ seconds }};
    -ms-animation-delay: {{ seconds }};
    -o-animation-delay: {{ seconds }};
    animation-delay: {{ seconds }};
}
{% endfor %}

{% for prefix in ['-moz-', '-webkit-', '-ms-', '-o-', ''] %}
@{{ prefix }}keyframes sandglass {
    0% {
        width: 14px;
        height: 14px;
        background-color: #000000;
        {{ prefix }}transform: translateY(0);
    }

    100% {
        width: 28px;
        height: 28px;
        background-color: #ffffff;
        {{ prefix }}transform: translateY(-42px);
    }
}
{% endfor %}
</style>
