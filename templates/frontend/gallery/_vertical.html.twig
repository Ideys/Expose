{% spaceless %}
<div class="row-fluid">
  <div class="large-12 columns">
    <ul class="small-block-grid-1 medium-block-grid-{{ section.grid_rows }}">
      {% for item in section.items %}
        <li class="text-center">
          <img src="{{ app.request.basepath }}/gallery/1200/{{ item.path }}"
               alt="{{ item.title|e }}">
          {% if item.description|length %}
          <div class="caption">
            {{ item.description|raw }}
          </div>
          {% endif %}
        </li>
      {% endfor %}
    </ul>
  </div>
</div>
{% endspaceless %}
