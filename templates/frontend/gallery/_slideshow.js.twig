<script>
$(document).foundation({
  orbit: {
      animation: '{{ section.slide_mode }}',
      timer_speed: 10000,
      pause_on_hover: true,
      resume_on_mouseout: true,
      animation_speed: 500,
      stack_on_small: false,
      navigation_arrows: true,
      slide_number: false,
      slide_number_text: 'of',
      bullets: false,
      circular: true,
      timer: false,
      variable_height: false,
      swipe: false
  }
});

!function($) {
  $(function(){
      $('#gallery').on('click', '.orbit-container', function() {
          $(this).trigger("orbit.next");
          $(this).find('.orbit-next').click();
      });
  });
}(window.jQuery);
</script>
