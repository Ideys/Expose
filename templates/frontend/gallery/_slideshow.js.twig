<script>
$(document).foundation({
  orbit: {
      animation: '{{ section.slide_mode }}',
      timer_speed: 10000,
      pause_on_hover: true,
      resume_on_mouseout: true,
      next_on_click: true,
      animation_speed: 500,
      stack_on_small: false,
      navigation_arrows: true,
      slide_number: false,
      slide_number_text: 'of',
      timer_show_progress_bar: false,
      bullets: false,
      circular: true,
      timer: false,
      variable_height: false,
      swipe: true
  }
});

!function($) {
$(function(){

    // Keypad navigation
    $('body').on('keydown', function(event){
        var key = event.which
          , keys = [
                32, // Space bar
                39, // Right
                37  // Left
            ]
          ;

        if ( keys.indexOf(key) > -1 ) {
            event.preventDefault();
            if (37 == key) {
                $('.orbit-prev').click();
            } else {
                $('.orbit-next').click();
            }
        }
    });

});
}(window.jQuery);
</script>
