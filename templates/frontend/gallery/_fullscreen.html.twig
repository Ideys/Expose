{% spaceless %}
<ul class="gallery-slideshow" data-orbit>
  {% for row, slide in section.items %}
    <li data-orbit-slide="pic-{{ row }}">
      <div class="slide"
           style="background-image: url('{{ app.request.basepath }}/gallery/{{ slide.path }}');"></div>
      {{ widgets.gallery_slide_legend(slide, section, 'orbit-caption') }}
     </li>
  {% endfor %}
</ul>
{% if section.thumb_list %}
<table class="thumb-list">
  <tbody>
    <tr>
    {% for row, item in section.items %}
    <td>
      <a data-orbit-link="pic-{{ row }}"
         title="{{ item.title|e }}">
        <img src="{{ app.request.basepath }}/gallery/220/{{ item.path }}">
      </a>
    </td>
    {% endfor %}
    </tr>
  </tbody>
</table>
{% endif %}
{% endspaceless %}
