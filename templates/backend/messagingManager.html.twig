{% extends "backend/layout.html.twig" %}

{% block main -%}
{% for message in messages %}
<div class="row">
  <div class="large-3 columns">
    <h3>{{ message.name }}</h3>
    <strong>{{ message.email }}</strong>
    <br>
    {{ message.date|date('d/m/Y') }}
  </div>
  <div class="large-9 columns">
    <p>{{ message.message|nl2br }}</p>
  </div>
</div>
{% endfor %}
{%- endblock main %}
