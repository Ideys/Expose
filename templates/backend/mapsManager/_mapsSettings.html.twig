{% import "widgets.html.twig" as widgets %}
{% spaceless %}
<div class="row">
  <div class="medium-12 columns">
    {{ form_start(edit_form, {
      'action': path('admin_maps_manager_settings', {'id': section.id})
    }) }}
    <div class="row">
      <div class="medium-6 columns">
      {{ form_row(edit_form.title) }}
      {{ form_row(edit_form.description) }}
      </div>
    </div>
    {% include 'backend/contentManager/_commonSettings.html.twig' with {
        'edit_form': edit_form,
        'widgets': widgets
    } only %}
    {{ form_end(edit_form) }}
  </div>
</div>
<div class="row">
  <div class="medium-12 columns">
    {% include 'backend/contentManager/_interactionsLinks.html.twig' with {
    'section': section,
    'delete_form': delete_form,
    'action_path': path('admin_html_manager_delete', {'id': section.id}),
    'info': 'html.delete.section'
    } only %}
  </div>
</div>
{% endspaceless %}