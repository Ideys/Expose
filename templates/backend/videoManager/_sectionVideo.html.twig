{% spaceless %}
<dd data-id="{{ section.id }}"
    class="section{% if not section.active %} hidden-section{% endif %}">
  {% include 'backend/contentManager/_sectionTitle.html.twig' with {'section': section} only %}
  <div class="content video" id="panel{{ section.id }}">
    <p>{{ section.description|nl2br }}</p>
    <dl class="tabs" data-tab>
      <dd>
        <a href="#panel{{ section.id }}-preview">
          {{ 'content.video'|trans }}
        </a>
      </dd>
    </dl>
    <div class="tabs-content">
      <div class="content" id="panel{{ section.id }}-preview">
      </div>
    </div>
  </div>
</dd>
{% endspaceless %}