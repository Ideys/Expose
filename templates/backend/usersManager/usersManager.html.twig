{% extends "backend/layout.html.twig" %}

{% block main -%}
<div class="row">
  <div class="small-12 large-6 columns">
    <table>
      <tbody>
      {% for user in users %}
        <tr>
          <td>
            <i class="fi-torso{% if 'f' == user.gender %}-female{% endif %}"></i>
            {{ user.firstname }}
            {{ user.lastname }}
            <br>
            {{ user.username }}
          </td>
          <td>
            {% for role in user.roles %}
              {{ ('user.role.'~role)|trans }}
            {% endfor %}
            <br>
            {% if user.lastLogin|length %}
              {{ user.lastLogin|date('d/m/y H:i') }}
            {% else %}
              {{ 'user.never.connected'|trans }}
            {% endif %}
          </td>
          <td>
            <a href="#" data-dropdown="user_action{{ user.id }}" class="tiny button dropdown">
              {{ 'actions'|trans }}
            </a>
            <ul id="user_action{{ user.id }}" data-dropdown-content="" class="f-dropdown">
              <li><a href="{{ path('admin_users_manager', {'id': user.id}) }}">{{ 'edit'|trans }}</a></li>
              <li><a href="{{ path('admin_user_manager_delete', {'id': user.id}) }}">{{ 'delete'|trans }}</a></li>
            </ul>
          </td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
  </div>
  <div class="small-12 large-6 columns">
    {{ form_start(form) }}
      {{ form_errors(form) }}
      <fieldset>
        {% if edited_profile.id > 0 %}
        <legend>{{ 'user.edit'|trans }}</legend>
        {% else %}
        <legend>{{ 'user.new'|trans }}</legend>
        {% endif %}
        {{ form_row(form.gender) }}
        {{ form_row(form.firstname) }}
        {{ form_row(form.lastname) }}
        {{ form_row(form.email) }}
        <legend>{{ 'user.access'|trans }}</legend>
        {{ form_row(form.username) }}
        {{ form_row(form.plainPassword) }}
        {{ form_row(form.roles) }}
      </fieldset>
      <div class="hidden">
        {{ form_rest(form) }}
      </div>
      <div class="text-right">
        <input type="submit" name="submit"
               value="{{ 'submit'|trans }}" class="tiny button">
      </div>
    {{ form_end(form) }}
  </div>
</div>
{%- endblock main %}
