{% extends "backend/layout.html.twig" %}

{%- block main -%}

    {% include "backend/usersManager/usersMenu.html.twig" with {'panel': 'groups'} only %}

    <br>

    <div class="row">

        <div class="small-12 large-6 columns">
            <ul>
            {% for group in groups %}
            <li>
                {{ group.name }}
            </li>
            {% endfor %}
            </ul>
        </div>

        <div class="small-12 large-6 columns">
            {{ form_start(form) }}
            {{ form_errors(form) }}
            <fieldset>
                {{ form_row(form.name) }}
            </fieldset>
            <div class="hidden">
                {{ form_rest(form) }}
            </div>
            <div class="text-right">
                <input type="submit" name="submit" value="{{ 'submit'|trans }}" class="tiny button">
            </div>
            {{ form_end(form) }}
        </div>

    </div>

{%- endblock main -%}
