{% import "widgets.html.twig" as widgets %}
{% spaceless %}
<div class="row">
  <div class="large-12 columns">
    {{ form_start(form, {'action': path('admin_html_manager_edit', {'id': section.id})}) }}
      {{ form_errors(form) }}
      <div class="row">
        <div class="medium-8 medium-centered columns">
          {{ form_row(form.title) }}
        </div>
      </div>
      <div class="row">
        <div class="medium-8 medium-centered columns">
          {{ form_row(form.content) }}
        </div>
      </div>
      <div class="row">
        <div class="medium-8 medium-centered columns text-right">
          {{ widgets.btn_ajax() }}
        </div>
      </div>
      <div class="hidden">
        {{ form_rest(form) }}
      </div>
    {{ form_end(form) }}
  </div>
</div>
{% endspaceless %}