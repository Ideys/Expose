{% spaceless %}
<ul class="no-bullet places-list">

    {# Single places #}
    {% for place in section.places %}
        {% include "backend/mapManager/_placeItem.html.twig" with {
            'section': section,
            'item': place
        } only %}
    {% endfor %}

    {# Places connected to other Sections #}
    {% for connectedSection in section.connectedSections %}
        {% for item in connectedSection.items %}
            {% include "backend/mapManager/_placeItem.html.twig" with {
                'section': connectedSection,
                'item': item
            } only %}
        {% endfor %}
    {% endfor %}

</ul>
{% endspaceless %}