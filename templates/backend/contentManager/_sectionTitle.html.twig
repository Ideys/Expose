{% spaceless %}
{% set icons = {
    'gallery': 'photo',
    'video': 'play-video',
    'page': 'page-filled',
    'form': 'checkbox'
} %}
<a href="#panel{{ section.id }}"
   data-click="#panel{{ section.id }} .tabs dd:first-child a">
  <span class="handle-section">&nbsp;</span>
  <i class="fi-{{ icons[section.type] }} type-icon"></i>
  {{ section.title }}
  {% if section.homepage %}
    <i class="fi-home state-icon"></i>
  {% elseif 'public' == section.visibility %}
    <i class="fi-link state-icon"></i>
  {% elseif 'private' == section.visibility %}
    <i class="fi-lock state-icon"></i>
  {% elseif 'hidden' == section.visibility %}
    <i class="fi-unlink state-icon"></i>
  {% elseif 'closed' == section.visibility %}
    <i class="fi-prohibited state-icon"></i>
  {% endif %}
</a>
{% endspaceless %}