{% spaceless %}
<dd data-id="{{ section.id }}">
  <a href="#panel{{ section.id }}"
     data-click="#panel{{ section.id }} .tabs dd:first-child a">
    <span class="handle-section">&nbsp;</span>
    {{ section.title }}
  </a>
  <div class="content page" id="panel{{ section.id }}">
    <p>{{ section.description|nl2br }}</p>
    <dl class="tabs" data-tab>
      <dd>
        <a href="#panel{{ section.id }}-preview"
           data-inject-call="{{ path('admin_page_manager_preview', {'id': section.id}) }}"
           data-target="#panel{{ section.id }}-preview">
          {{ 'content.preview'|trans }}
        </a>
      </dd>
      <dd>
        <a href="#panel{{ section.id }}-edit"
           data-inject-call="{{ path('admin_page_manager_edit', {'id': section.id}) }}"
           data-target="#panel{{ section.id }}-edit">
          {{ 'content.edit'|trans }}
        </a>
      </dd>
      <dd>
        <a href="#panel{{ section.id }}-settings"
           data-inject-call="{{ path('admin_page_manager_settings', {'id': section.id}) }}"
           data-target="#panel{{ section.id }}-settings">
          {{ 'settings'|trans }}
        </a>
      </dd>
    </dl>
    <div class="tabs-content">
      <div class="content" id="panel{{ section.id }}-preview">
      </div>
      <div class="content" id="panel{{ section.id }}-edit">
      </div>
      <div class="content" id="panel{{ section.id }}-settings">
      </div>
    </div>
  </div>
</dd>
{% endspaceless %}