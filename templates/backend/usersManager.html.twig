{% extends "backend/layout.html.twig" %}

{% block main -%}
<div class="row">
  <div class="small-12 large-6 columns">
    {% for user in users %}
    <div class="panel">
      <h5>{{ user.username }}</h5>
      <p>{{ user.roles }}</p>
      <a href="#" data-dropdown="user_action{{ user.id }}" class="tiny button dropdown">
        {{ 'actions'|trans }}
      </a>
      <br>
      <ul id="user_action{{ user.id }}" data-dropdown-content="" class="f-dropdown">
        <li><a href="#">{{ 'edit'|trans }}</a></li>
        <li><a href="{{ path('admin_user_manager_delete', {'id': user.id}) }}">{{ 'delete'|trans }}</a></li>
      </ul>
    </div>
    {% endfor %}
  </div>
  <div class="small-12 large-6 columns">
    {{ form_start(form) }}
      {{ form_errors(form) }}
      <fieldset>
        {{ form_row(form.username) }}
      </fieldset>
      <fieldset>
        {{ form_row(form.password) }}
      </fieldset>
      <div class="hidden">
        {{ form_rest(form) }}
      </div>
      <div class="text-right">
        <input type="submit" name="submit"
               value="{{ 'submit'|trans }}" class="tiny button">
      </div>
    {{ form_end(form) }}
  </div>
</div>
{%- endblock main %}
